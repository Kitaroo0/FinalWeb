<!-- views/nasa.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NASA Image of the Day</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="/css/nasa.css" rel="stylesheet">
</head>
<body class="container">
    <h1>NASA Image of the Day</h1>
    <a href="/" class="btn btn-primary add-portfolio-button">Main</a>
    <a href="/admin" class="btn btn-primary add-portfolio-button">Admin Page</a>
    <% if (imageData) { %>
        <h2><%= imageData.title %></h2>
        <img src="<%= imageData.url %>" alt="<%= imageData.title %>" style="max-width: 100%;">
        <p><%= imageData.explanation %></p>
    <% } else { %>
        <p>No image available</p>
    <% } %>
</body>
</html>
